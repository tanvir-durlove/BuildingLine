        android:layout_marginTop="@dimen/pack_margin_top"
        android:background="@drawable/custom_rounrect_eight"
        android:text="@string/eight"
        android:textColor="@android:color/white"
        android:textSize="@dimen/content_text_size" />

    <Button
        android:id="@+id/bpack9"
        android:layout_width="@dimen/pack_width"
        android:layout_height="@dimen/pack_height"
        android:layout_marginTop="@dimen/pack_margin_top"
        android:background="@drawable/custom_rounrect_nine"
